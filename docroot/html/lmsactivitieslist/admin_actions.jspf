		%>
	
		<liferay-ui:icon message="activity.just.one.visible"  image="actividad" url="#" onClick="<%=visibiltyURLJavascript %>"/>
</c:if>
<!-- Mostrar calificaciones actividad. -->
<c:if test="<%=visibleCalifications && hasPermissionViewResults%>">
	
